<header class="mb-4">
  <h1 class="h2">Projects</h1>
  <p class="text-secondary">Hands-on work in networking, cloud, hardening, and detection engineering.</p>
</header>

<div class="row g-4">
  <% projects.forEach(p => { %>
    <div class="col-sm-6 col-lg-4">
      <article class="card bg-body-tertiary text-light h-100 border-0 rounded-4">
        <% if (p.image) { %>
          <img src="<%= p.image %>" class="card-img-top rounded-top-4" alt="<%= p.title %>">
        <% } %>
        <div class="card-body d-flex flex-column">
          <h3 class="h5 card-title"><%= p.title %></h3>
          <p class="card-text text-secondary"><%= p.desc %></p>
          <div class="mt-auto">
            <div class="d-flex flex-wrap gap-2 mb-3">
              <% p.stack.forEach(t => { %>
                <span class="badge bg-secondary"><%= t %></span>
              <% }) %>
            </div>
            <a class="btn btn-sm btn-primary" href="<%= p.link %>" target="_blank" rel="noreferrer">
              <i class="fa-solid fa-arrow-up-right-from-square me-1"></i>View
            </a>
          </div>
        </div>
      </article>
    </div>
  <% }) %>
</div>
